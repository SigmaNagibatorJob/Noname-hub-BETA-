local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")

-- Укажите ссылку на файл с последней версией скрипта
local versionUrl = "https://raw.githubusercontent.com/SigmaNagibatorJob/Noname-hub-BETA-/main/Noname%20Hub(BETA).txt"

-- Локальная версия скрипта (обновите эту версию при изменениях)
local currentVersion = "1.0.0"

-- Функция для проверки обновлений
local function checkForUpdates()
    local success, response = pcall(function()
        return HttpService:GetAsync(versionUrl)
    end)

    if success then
        -- Извлекаем версию из файла
        local latestVersion = response:match("([%d%.]+)")  

        if latestVersion ~= currentVersion then
            -- Если версия отличается, кидаем игроков, у которых открыт скрипт
            for _, player in ipairs(Players:GetPlayers()) do
                if player.Character and player:FindFirstChild("PlayerScripts") then
                    local playerScript = player.PlayerScripts:FindFirstChild("Noname Hub(BETA)")  -- Проверка на наличие скрипта
                    if playerScript then
                        -- Кикаем игрока с уведомлением
                        player:Kick("Обновление скрипта доступно. Пожалуйста, обновите скрипт.")
                    end
                end
            end
        end
    else
        warn("Не удалось проверить обновления.")
    end
end

-- Запуск функции проверки обновлений
checkForUpdates()
